{
  "name": "SA Optimizely Tool",
  "description": "Manage the available Optimizely experiments",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "components/options/index.html",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://shop-apotheke.com/*", "http://localhost/*"],
  "action": {
    "default_popup": "components/popup/index.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  }
}
