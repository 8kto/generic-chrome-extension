{
  "name": "sa-optimizely-tool",
  "version": "1.1.5",
  "description": "Chrome extension for the Optimizely experiments management",
  "main": "index.js",
  "license": "proprietary",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:RedTecLab/igel-chrome-sa-optimizely-tool.git"
  },
  "engines": {
    "node": "14.17.0"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"./**/*.{js,json,html}\" && stylelint **/*.css --fix",
    "lint": "yarn lint:styles && yarn lint:js",
    "lint:js": "eslint --ext=.js,.jsx,.mjs .",
    "lint:styles": "stylelint **/*.css",
    "bump": "mversion",
    "bump:patch": "mversion patch -t"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mversion": "^2.0.1",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0"
  }
}
